;; Fetch
(defpoll
    distro
    :interval "24h"
    "lsb_release -si"
)
(defpoll
    kernel
    :interval "24h"
    "uname -r"
)
(defpoll 
    windowmanager
    :interval "12h" 
    "wmctrl -m | grep Name: | awk '{print $2}'"
)
(defpoll 
    shell 
    :interval "10m" 
    "echo $SHELL | awk -F'/' '{print $NF}'"
)
(defpoll
    resolution
    :interval "1m"
    "xdpyinfo | awk '/dimensions/ {print $2}'"
)
(defpoll 
    uptime 
    :interval "1m" 
    "uptime -p | sed -e 's/up //;s/ hours,/h/;s/ minutes/m/'"
)

