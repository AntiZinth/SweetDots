;; Dashboard

(defwidget dashboard []
  (box 
    :orientation "h"
    :class "dashboard"
    :space-evenly "false"

    (box 
      :orientation "v"
      :space-evenly "false"
      (profile)
      (quotes)
    )

    (box :orientation "v" 
      :space-evenly "false"
      (todo)
      (weather)

      (box
        :orientation "h"
        :space-evenly "false"
        (clock)
        (fetch)
      )
    )

    (box 
      :orientation "v" 
      :space-evenly "false"
      (music)
      (resources)
    )
  )
)