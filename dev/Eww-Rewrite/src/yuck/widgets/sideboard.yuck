(defwidget card [?class summary body glyph ?glyph_class ?SL ?M ?L ?R]
    (eventbox 
        :onmiddleclick M 
        :onclick L 
        :onrightclick R 
        :class "sideboard-card-eventbox"

        (box
            :space-evenly false

            (label 
                :class "sideboard-glyph ${glyph_class}" 
                :text glyph
            )
   
            (box
                :orientation "vertical" 
                :class class 
                :space-evenly false 
                :hexpand true
                :class "sideboard-card-box"
   
                (box 
                    :space-evenly false

                    (label 
                        :limit-width 25 
                        :wrap true 
                        :text summary 
                        :class "sideboard-summary" 
                        :halign "start" 
                        :hexpand true
                    )

                    (button 
                        :onclick "scripts/logger.zsh rm_id ${SL}" 
                        :class "sideboard-card-notify-close"

                        (label 
                            :text "X"
                        )
                    )
                )
   
                (label 
                    :text ""
                    :class "sideboard-separator"
                )

                (label 
                    :limit-width 40
                    :wrap true
                    :text body
                    :halign "start"
                    :class "sideboard-body"
                )
            )
        )
    )
)

