(defwindow sideboard :stacking "fg" 
  :windowtype "normal" 
  :wm-ignore true
  :geometry (geometry :x 10 :width "26%" :height "70%" :anchor "left center") 
  (sideboard_layout))

(defwidget sideboard_layout []
    (box 
        :orientation "vertical"
        :space-evenly false
        :class "sideboard-layout-box"

            (box 
                :space-evenly false
                :class "sideboard-headers"

                (label 
                    :text "Notifications"
                    :class "sideboard-headers-label"
                    :halign "start"
                    :hexpand true
                )

                (button 
                    :onclick "scripts/logger.zsh clear"
                    :class "sideboard-headers-clear" "X"
                )
            )

        (literal 
            :content sideboardcards 
            :class "sideboard-literal"
        )
    )
)