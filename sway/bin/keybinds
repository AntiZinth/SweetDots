# Keybinds (Best edit in vscode)

# Variables
set 	                $mod                                Mod4
set 	                $term                               LIBGL_ALWAYS_SOFTWARE=1 kitty -c $HOME/.config/sway/kitty/kitty.conf
set                     $menu                               wofi -b -a -c $HOME/.config/sway/wofi/launcher -s $HOME/.config/sway/wofi/style.css
set                     $bluetooth                          $HOME/.config/sway/bin/wofi/bluetooth
set                     $network                            $HOME/.config/sway/bin/wofi/wifi   
set                     $screenshot                         $HOME/.config/sway/bin/wofi/screenshot
set                     $run                                run
set                     $window                             window
set                     $screenshotnow                      $HOME/.config/sway/bin/notify/screenshot --now
set                     $screenshotwin                      $HOME/.config/sway/bin/notify/screenshot --win
set                     $screenshotarea                     $HOME/.config/sway/bin/notify/screenshot --area
set                     $screenshotin5                      $HOME/.config/sway/bin/notify/screenshot --in5
set                     $screenshotin10                     $HOME/.config/sway/bin/notify/screenshot --in10
set                     $brightnessup                       $HOME/.config/sway/bin/notify/brightness up
set                     $brightnessdown                     $HOME/.config/sway/bin/notify/brightness down
set                     $volumeup                           $HOME/.config/sway/bin/notify/volume up
set                     $volumedown                         $HOME/.config/sway/bin/notify/volume down
set                     $volumemute                         $HOME/.config/sway/bin/notify/volume mute

# Floating Controls
floating_modifier       $mod 	                            normal

# Open Terminal
bindsym                 $mod+Return 	                    exec    $term

# General           
bindsym                 $mod+x 		                        kill

# Wofi          
bindsym 	        $mod+Shift+Space   	                    exec    $menu
bindsym                 $mod+b                              exec    $bluetooth
bindsym                 $mod+n                              exec    $wifi
bindsym                 $mod+s                              exec    $screenshot

# Reload Config
bindsym 	            $mod+r 		                        reload

# Quit Sway
bindsym 	            $mod+Shift+q 	                    exec 	swaynag -c $HOME/.config/sway/swaynag/config -t custom -m 'Do you wish quit out of your Sway session?' -b 'Yes' 'swaymsg exit'

# Powermenu
bindsym 	            $mod+p 	                            exec 	wlogout --layout $HOME/.config/sway/wlogout/layout --css $HOME/.config/sway/wlogout/style.css --protocol layer-shell

# Screenshot            
bindsym 	            print                               exec    $screenshotnow
bindsym 	            Control+Shift+print                 exec    $screenshotarea
bindsym                 Control+print                       exec    $screenshotwin
bindsym                 Alt+print                           exec    $screenshotin5
bindsym 	            Shift+print                         exec    $screenshotin10

# Function Keys
bindsym                 --locked XF86AudioRaiseVolume       exec $volumeup
bindsym                 --locked XF86AudioLowerVolume       exec $volumedown
bindsym                 --locked XF86AudioMute              exec $volumemute
bindsym                 --locked XF86AudioPlay              exec playerctl -p spotify,%any,firefox,chromium,brave,mpd play-pause
bindsym                 --locked XF86AudioNext              exec playerctl -p spotify,%any,firefox,chromium,brave,mpd next
bindsym                 --locked XF86AudioPrev              exec playerctl -p spotify,%any,firefox,chromium,brave,mpd previous
bindsym                 --locked XF86MonBrightnessUp        exec $brightnessup
bindsym                 --locked XF86MonBrightnessDown      exec $brightnessdown

# Move Focus
bindsym 	            $mod+Left                 	        focus 	left
bindsym 	            $mod+Down                 	        focus 	down
bindsym 	            $mod+Up 	                        focus 	up
bindsym 	            $mod+Right                          focus 	right

# Move Window to another Position
bindsym 	            $mod+Shift+Left 	                move 	left
bindsym 	            $mod+Shift+Down 	                move 	down
bindsym 	            $mod+Shift+Up 		                move 	up
bindsym 	            $mod+Shift+Right 	                move 	right

# Switch to Workspace
bindsym 	            $mod+1 		                        workspace 	number 	1
bindsym 	            $mod+2 		                        workspace 	number 	2
bindsym 	            $mod+3 		                        workspace 	number 	3
bindsym 	            $mod+4 		                        workspace 	number 	4
bindsym 	            $mod+5 		                        workspace 	number 	5
bindsym 	            $mod+6 		                        workspace 	number 	6
bindsym 	            $mod+7 		                        workspace 	number 	7
bindsym 	            $mod+8 		                        workspace 	number 	8
bindsym 	            $mod+9 		                        workspace 	number 	9
bindsym 	            $mod+0 		                        workspace 	number 	10

# Switch to previous Workspace
bindsym 	            $mod+Tab 	                        workspace 	back_and_forth

# Move to Workspace
bindsym 	            $mod+Shift+1 	                    move 	container to 	workspace number 1
bindsym 	            $mod+Shift+2	                    move 	container to 	workspace number 2
bindsym 	            $mod+Shift+3 	                    move 	container to 	workspace number 3
bindsym 	            $mod+Shift+4 	                    move 	container to 	workspace number 4
bindsym 	            $mod+Shift+5 	                    move 	container to 	workspace number 5
bindsym 	            $mod+Shift+6 	                    move 	container to 	workspace number 6
bindsym 	            $mod+Shift+7 	                    move 	container to 	workspace number 7
bindsym 	            $mod+Shift+8 	                    move 	container to 	workspace number 8
bindsym 	            $mod+Shift+9 	                    move 	container to 	workspace number 9
bindsym 	            $mod+Shift+0 	                    move 	container to 	workspace number 10

# Toggle Layouts
bindsym 	            $mod+Alt+h 	                        splith
bindsym 	            $mod+Alt+v 	                        splitv
bindsym 	            $mod+Alt+t 	                        layout 		tabbed
bindsym 	            $mod+Alt+s 	                        layout 		toggle split
bindsym 	            $mod+f   	                        fullscreen
bindsym 	            $mod+Space 	                        floating 	toggle
bindsym		            $mod+Alt+Shift+s	                focus 		mode_toggle

# Move Floating Windows
bindsym 	            $mod+Alt+Up 	                    move 	up 	    10
bindsym 	            $mod+Alt+Left                       move 	left 	10
bindsym 	            $mod+Alt+Right                      move 	right 	10
bindsym 	            $mod+Alt+Down 	                    move 	down 	10

# Move focus to the parent container
bindsym 	            $mod+a 		                        focus 	parent

# Move focus to the child container
bindsym 	            $mod+Shift+a 		                focus 	child

# Resizing containers:
bindsym 	            Shift+Alt+Left 		                resize  shrink 	width 	20px
bindsym 	            Shift+Alt+Up 		                resize  grow 	height 	20px
bindsym 	            Shift+Alt+Down 		                resize  shrink 	height 	20px
bindsym 	            Shift+Alt+Right 	                resize  grow 	width 	20px

# Move the currently focused window to the scratchpad
bindsym 	            $mod+Shift+minus 	                move 	scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
bindsym 	            $mod+minus 		                    scratchpad 	show
