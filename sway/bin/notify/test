#!/bin/bash

time=`date +%Y-%m-%d-%I-%M-%S`
geometry=`xrandr | head -n1 | cut -d',' -f2 | tr -d '[:blank:],current'`
dir="`xdg-user-dir PICTURES`/Screenshots"
file="Screenshot_${time}_${geometry}.png"
icon="$HOME/.config/sway/dunst/icons/clock.svg"

notify_view () {
	viewnior ${dir}/"$file"
	if [[ -e "$dir/$file" ]]; then
		notify-send "Screenshot Saved" -i $dir/$file
	else
		notify-send "Screenshot Deleted" -i $dir/$file
	fi
}

countdown () {
	for sec in `seq $1 -1 1`; do
		notify-send "Taking shot in : $sec" -i $icon
		sleep 1
	done
}

shotnow () {
	cd ${dir} && grim $dir/$file | wl-copy
	notify_view
}

shot5 () {
	countdown '3'
	sleep 1 && cd ${dir} && grim $dir/$file | wl-copy
	notify_view
}

shot10 () {
	countdown '10'
	sleep 1 && cd ${dir} && grim $dir/$file | wl-copy
	notify_view
}

shotwin () {
        cd ${dir} && grim -g "$(swaymsg -t get_tree | jq -r '.. | select(.pid? and .visible?) | .rect | "\(.x),\(.y) \(.width)x\(.height)"' | slurp)" $dir/$file | wl-copy
	notify_view
}

shotarea () {
        cd ${dir} && grim -g "$(slurp)" $dir/$file | wl-copy
	notify_view
}

if [[ ! -d "$dir" ]]; then
	mkdir -p "$dir"
fi

docs () {
  echo "Usage: screenshot [Options]

  Options:
    now         take a screenshot of whole screen
    win         take a screenshot of the selected window
    area        take a screenshot of the selected area
    in5         will set a screenshot timer for 5 seconds
    in10        will set a screenshot timer for 10 seconds"
}

case "$1" in
  now)
    shotnow
  ;;
  in5)
    shot5
  ;;
  in10)
    shot10
  ;;
  win)
    shotwin
  ;;
  area)
    shotarea
  ;;
  *)
    docs
  ;;
esac

exit 0
