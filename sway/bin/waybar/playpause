#!/bin/bash

# Just reuse of status but it works ok
# Why not use a python script that output a json string?        It's really complicated to do and it's hard to troubleshoot for a new user plus it doesn't work well with zscroll this method is simpler and clean

PLAYERCTL_STATUS=$(playerctl -p spotify,%any,firefox,chromium,brave,mpd status 2>/dev/null)
EXIT_CODE=$?

if [ $EXIT_CODE -eq 0 ]; then
    STATUS=$PLAYERCTL_STATUS
else
    STATUS="Offline"
fi

if [ "$STATUS" = "Stopped" ]; then
  echo "{\"class\": \"custom-playpause\", \"text\": \"\"}"
  exit
elif [ "$STATUS" = "Paused"  ]; then
  echo "{\"class\": \"custom-playpause\", \"text\": \"\"}"
  exit
elif [ "$STATUS" = "Playing" ]; then
  echo "{\"class\": \"custom-playpause\", \"text\": \"\"}"
  exit
elif [ "$STATUS" = "Offline"  ]; then
  echo "{\"class\": \"custom-playpause\", \"text\": \"\"}"
  exit
fi

