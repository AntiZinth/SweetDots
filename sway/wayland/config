# Touchpad settings
# Please put you own touchpad in here (Use this command to see your touchpad device name: swaymsg -t get_inputs )
input "AlpsPS/2_ALPS_DualPoint_TouchPad" {
	dwt 						enabled
	tap 						enabled
	natural_scroll				enabled
	middle_emulation			enabled
}

# Wallpaper
output	*	bg					$HOME/.config/sway/wallpapers/pastel-car-blue.jpg fill

# Mouse Behavior
focus_follows_mouse     		yes

# Idle
exec swayidle -w \
	timeout 600 'swaylock -f' \
	timeout 1800 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
	before-sleep 'swaylock -f'