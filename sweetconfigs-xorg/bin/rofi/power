#!/bin/bash

config="$HOME/.config/sweetconfigs-xorg/rofi/power.rasi"
confirm_config="$HOME/.config/sweetconfigs-xorg/rofi/confirm.rasi"
confirm="$HOME/.config/sweetconfigs-xorg/bin/rofi/confirm 'Are you Sure?'"
rofi_command="rofi -theme"

quit () {
    if [ `pidof berry` ]; then
        berryc quit
    elif [ `pidof bspwm` ]; then
        bspc quit
    else
        kill -9 -1
    fi
}

uptime=$(uptime -p | sed -e 's/up //g')

shutdown=""
reboot=""
lock=""
suspend=""
logout=""

options="$shutdown\n$reboot\n$lock\n$suspend\n$logout"
message="Options  -  Yes / No"

chosen="$(echo -e "$options" | $rofi_command $config -p "UP - $uptime" -dmenu -selected-row 2)"
case $chosen in
    $shutdown)
		answer=$($confirm &)
		if [[ $answer == "yes" ]] || [[ $answer == "Yes" ]] || [[ $answer == "YES" ]] || [[ $answer == "y" ]] || [[ $answer == "Y" ]]; then
			systemctl poweroff
		elif [[ $answer == "no" ]] || [[ $answer == "No" ]] || [[ $answer == "NO" ]] || [[ $answer == "n" ]] || [[ $answer == "N" ]]; then
			exit
        else
			$rofi_command $confirm_config -e "$message"
        fi
    ;;
    $reboot)
		answer=$($confirm &)
		if [[ $answer == "yes" ]] || [[ $answer == "Yes" ]] || [[ $answer == "YES" ]] || [[ $answer == "y" ]] || [[ $answer == "Y" ]]; then
			systemctl reboot
		elif [[ $answer == "no" ]] || [[ $answer == "No" ]] || [[ $answer == "NO" ]] || [[ $answer == "n" ]] || [[ $answer == "N" ]]; then
			exit
        else
			$rofi_command $confirm_config -e "$message"
        fi
    ;;
    $lock)
        $HOME/.config/berry/bin/eww/lock
    ;;
    $suspend)
		answer=$($confirm &)
		if [[ $answer == "yes" ]] || [[ $answer == "Yes" ]] || [[ $answer == "YES" ]] || [[ $answer == "y" ]] || [[ $answer == "Y" ]]; then
			playerctl -a stop
			pamixer -m
			systemctl suspend
			$HOME/.config/berry/bin/eww/lock
		elif [[ $answer == "no" ]] || [[ $answer == "No" ]] || [[ $answer == "NO" ]] || [[ $answer == "n" ]] || [[ $answer == "N" ]]; then
			exit
        else
			$rofi_command $confirm_config -e "$message"
        fi
    ;;
    $logout)
		answer=$($confirm &)
		if [[ $answer == "yes" ]] || [[ $answer == "Yes" ]] || [[ $answer == "YES" ]] || [[ $answer == "y" ]] || [[ $answer == "Y" ]]; then
            quit
		elif [[ $answer == "no" ]] || [[ $answer == "No" ]] || [[ $answer == "NO" ]] || [[ $answer == "n" ]] || [[ $answer == "N" ]]; then
			exit
        else
			$rofi_command $confirm_config -e "$message"
        fi
    ;;
esac
