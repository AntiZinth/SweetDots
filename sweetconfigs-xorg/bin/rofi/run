#!/bin/bash

rofi \
	-show run \
	-modi run,drun,ssh,window  \
	-no-lazy-grab \
	-scroll-method 0 \
	-drun-match-fields all \
	-drun-display-format "{name}" \
	-no-drun-show-actions \
	-terminal kitty -c $HOME/.config/sweetconfigs-xorg/kitty/kitty.conf \
	-kb-cancel Alt-F1 \
	-theme $HOME/.config/sweetconfigs-xorg/rofi/menu.rasi