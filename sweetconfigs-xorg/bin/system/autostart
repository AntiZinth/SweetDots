#!/bin/bash

# Autostart Programs
# Warning: This file is important don't delete or modify anything unless know what your doing

# Kill already running processs
process=(sxhkd polybar picom dunst mpd mpDris2 greenclip xfce4-power-manager)
for processed in "${process[@]}"; do
	if [[ `pidof ${processed}` ]]; then
		killall -9 ${processed}
	fi
done

# Load Xresources
xrdb $HOME/.Xresources

# Fix cursor
xsetroot -cursor_name left_ptr &

# Polkit agent (Gnome)
/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &

# Clipboard
greenclip daemon &

# Power Management
xfce4-power-manager &

# Set/Restore wallpaper
feh --bg-fill -r -z $HOME/.config/sweetconfigs-xorg/wallpapers/stairs.png &

# Bar
$HOME/.config/sweetconfigs-xorg/bin/system/bar &

# Notification
$HOME/.config/sweetconfigs-xorg/bin/system/notification &

# Compositor
$HOME/.config/sweetconfigs-xorg/bin/system/compositor &

# Start mpd
exec mpd &
exec mpDris2 &