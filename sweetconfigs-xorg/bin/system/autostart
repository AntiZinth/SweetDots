#!/bin/bash

# Autostart Programs

# Kill already running processs
process=(sxhkd polybar picom dunst ksuperkey mpd xfce-polkit xfce4-power-manager)
for processed in "${process[@]}"; do
	if [[ `pidof ${processed}` ]]; then
		killall -9 ${processed}
	fi
done

# Load Xresources
xrdb $HOME/.Xresources

# Fix cursor
xsetroot -cursor_name left_ptr &

# Polkit agent (Gnome)
/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &

# Power Management
xfce4-power-manager &

# Super Keys
ksuperkey -e 'Super_L=Alt_L|F1' &
ksuperkey -e 'Super_R=Alt_L|F1' &

# Set/Restore wallpaper
feh --bg-fill -r -z $HOME/.config/sweetconfigs-xorg/wallpapers &

# Polybar
$HOME/.config/sweetconfigs-xorg/bin/system/bar &

# Notification
$HOME/.config/sweetconfigs-xorg/bin/system/notification &

# Compositor
$HOME/.config/sweetconfigs-xorg/bin/system/compositor &

# Start mpd
exec mpd &
exec mpDris2 &
