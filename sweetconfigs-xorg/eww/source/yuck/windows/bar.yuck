(defwindow bar
	:geometry 
	
		(geometry 
			:x "1%"
			:y "1%" 
			:height "5%" 
			:width "98%"
		)

	:monitor 0
	:stacking "bg"
	:reserve 

		(struts 
			:distance "40px" 
			:side "top"
		)

	:windowtype "desktop"
	:wm-ignore false

	(bar)
)

(defwindow calendar
	:geometry 

		(geometry 
			:x "-1%"
			:y "7%"
			:width "230px"
			:height "230px"
			:anchor "top right"
		)

	:windowtype "dock"
	:stacking "fg"
	:wm-ignore false
	
	(calendar-widget)
)