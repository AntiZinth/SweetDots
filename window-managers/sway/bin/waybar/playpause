#!/bin/bash

STATUS=$(playerctl -p spotify,mpd,%any status 2>/dev/null)

if [ "$STATUS" = "Stopped" ]; then
  echo '{"class": "custom-playpause-stopped", "text": ""}'
  exit
elif [ "$STATUS" = "Paused"  ]; then
  echo '{"class": "custom-playpause-paused", "text": ""}'
  exit
elif [ "$STATUS" = "Playing" ]; then
  echo '{"class": "custom-playpause-playing", "text": ""}'
  exit
elif [ "$STATUS" = "Offline"  ]; then
  echo '{"class": "custom-playpause-offline", "text": ""}'
  exit
fi

