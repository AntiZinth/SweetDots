#!/bin/bash
zscroll -l 20 \
        --delay 1 \
        --scroll-padding " | " \
        --match-command "$HOME/.config/sway/bin/waybar/status --status" \
        --match-text "Playing" "--scroll 1" \
        --match-text "Paused" "--scroll 0" \
        --update-check true "$HOME/.config/sway/bin/waybar/status" &
wait